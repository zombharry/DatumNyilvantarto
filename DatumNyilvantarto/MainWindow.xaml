<Window x:Class="DatumNyilvantarto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatumNyilvantarto"
        xmlns:utils="clr-namespace:DatumNyilvantarto.Utils"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Window.Resources>
        <utils:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
    </Window.Resources>
    <Window.InputBindings>
        
        <KeyBinding Command="ApplicationCommands.Undo" Modifiers="Control" Key="Z"/>
        
        <KeyBinding Command="ApplicationCommands.Redo" Modifiers="Control" Key="Y"/>
        <KeyBinding Command="ApplicationCommands.Redo" Modifiers="Control+Shift" Key="Z"/>

        
        <KeyBinding Command="{Binding SaveCommand}" Modifiers="Control" Key="S"/>
    </Window.InputBindings>

    <Window.CommandBindings>
       
        <CommandBinding Command="ApplicationCommands.Undo"
                        CanExecute="GlobalUndo_CanExecute"
                        Executed="GlobalUndo_Executed"/>
        <CommandBinding Command="ApplicationCommands.Redo"
                        CanExecute="GlobalRedo_CanExecute"
                        Executed="GlobalRedo_Executed"/>
    </Window.CommandBindings>
    <DockPanel>
		<!-- Fejléc -->
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="LightGray">
			<TextBlock Text="Osztályok" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
			

			<Button Content="Mentés" Command="{Binding SaveCommand}"  Width="60" Height="30" Margin="10,0,0,0" FontWeight="Bold" FontSize="16"/>
		</StackPanel>

		<!-- Osztály lista -->
        <DataGrid ItemsSource="{Binding Classes}" AutoGenerateColumns="False"
                  CanUserAddRows="False" CanUserDeleteRows="True"
                  Margin="10"
                  IsReadOnly="False" 
                  SelectedItem="{Binding SelectedClass}">
			<DataGrid.Columns>
                <DataGridTextColumn Header="Osztály" Binding="{Binding ClassName}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Évfolyam">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Grade" UpdateSourceTrigger="PropertyChanged" />
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Betű" >
                    <DataGridTextColumn.Binding>
                        <Binding Path="Letter" UpdateSourceTrigger="PropertyChanged" />
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Kezdő év">
                    <DataGridTextColumn.Binding>
                        <Binding Path="StartingYear" UpdateSourceTrigger="PropertyChanged" />
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Osztályfőnök"  Width="*">
                    <DataGridTextColumn.Binding>
                        <Binding Path="HeadTeacher" UpdateSourceTrigger="PropertyChanged" />
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Státusz" Width="80">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
                            <TextBlock Text="{Binding Warning, Converter={StaticResource BoolToStatusConverter}}" 
                                       FontSize="16" 
                                       HorizontalAlignment="Center"/>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				<DataGridTemplateColumn Header="Tanulók" Width="80">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
                            <Button Content="👥"
                                Command="{Binding DataContext.OpenStudentsCommand,RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsNew}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				<DataGridTemplateColumn Header="Törlés" Width="50">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
                            <Button Content ="Törlés"
                                    Command="{Binding DataContext.DeleteSchoolClassCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsNew}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>
	</DockPanel>
</Window>
