<Window x:Class="DatumNyilvantarto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatumNyilvantarto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Window.Resources>
		<local:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
	</Window.Resources>
	<DockPanel>
		<!-- Fejléc -->
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="LightGray">
			<TextBlock Text="Osztályok" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
			<Button Content="+" Command="{Binding AddOsztalyCommand}" 
                    Width="30" Height="30" Margin="10,0,0,0"
                    FontWeight="Bold" FontSize="16"/>
		</StackPanel>

		<!-- Osztály lista -->
		<DataGrid ItemsSource="{Binding Osztalyok}" AutoGenerateColumns="False" Margin="10"
                  CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                  SelectedItem="{Binding KivalasztottOsztaly}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Osztály" Binding="{Binding MegjelenitettNev}" Width="*"/>
				<DataGridTextColumn Header="Osztályfőnök" Binding="{Binding OsztalyFonok}" Width="*"/>
				<DataGridTemplateColumn Header="Státusz" Width="80">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Figyelmeztet, Converter={StaticResource BoolToStatusConverter}}" 
                                       FontSize="16" 
                                       HorizontalAlignment="Center"/>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>
	</DockPanel>
</Window>
