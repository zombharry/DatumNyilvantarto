<Window x:Class="DatumNyilvantarto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatumNyilvantarto"
        xmlns:utils="clr-namespace:DatumNyilvantarto.Utils"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Window.Resources>
		<utils:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
	</Window.Resources>
	<Window.InputBindings>
		<KeyBinding Key="S" Modifiers="Control" Command="{Binding SaveCommand}" />
	</Window.InputBindings>
	<DockPanel>
		<!-- Fejléc -->
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="LightGray">
			<TextBlock Text="Osztályok" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
			

			<Button Content="Mentés" Command="{Binding SaveCommand}"  Width="60" Height="30" Margin="10,0,0,0" FontWeight="Bold" FontSize="16"/>
		</StackPanel>

		<!-- Osztály lista -->
        <DataGrid ItemsSource="{Binding Classes}" AutoGenerateColumns="False" Margin="10"
                  CanUserAddRows="True" CanUserDeleteRows="True" IsReadOnly="False" 
                  SelectedItem="{Binding SelectedClass}">
			<DataGrid.Columns>
                <DataGridTextColumn Header="Osztály" Binding="{Binding ClassName}" Width="*" IsReadOnly="True"/>
				<DataGridTextColumn Header="Évfolyam" Binding="{Binding Grade}"/>
                <DataGridTextColumn Header="Betű" Binding="{Binding Letter}"/>
                <DataGridTextColumn Header="Kezdő év" Binding="{Binding StartingYear}"/>
                <DataGridTextColumn Header="Osztályfőnök" Binding="{Binding HeadTeacher}" Width="*"/>
				<DataGridTemplateColumn Header="Státusz" Width="80">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
                            <TextBlock Text="{Binding Warning, Converter={StaticResource BoolToStatusConverter}}" 
                                       FontSize="16" 
                                       HorizontalAlignment="Center"/>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				<DataGridTemplateColumn Header="Tanulók" Width="80">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
                            <Button Command="{Binding DataContext.OpenStudentsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                CommandParameter="{Binding}">
								<TextBlock Text="👥" FontSize="14"/>
							</Button>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				<DataGridTemplateColumn Header="Törlés" Width="50">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
                            <Button Content ="Törlés" Command="{Binding DataContext.DeleteSchoolClassCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                    CommandParameter="{Binding}">
							</Button>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>
	</DockPanel>
</Window>
